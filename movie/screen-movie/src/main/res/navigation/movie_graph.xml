<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_graph"
    app:startDestination="@id/movieCatalogFragment">

    <fragment
        android:id="@+id/movieCatalogFragment"
        android:name="com.rick.screen_movie.MovieCatalogFragment">
        <action
            android:id="@+id/action_movieCatalogFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
        <action
            android:id="@+id/action_movieCatalogFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.rick.screen_movie.details_screen.MovieDetailsFragment">
        <argument
            android:name="movieId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="movieTitle"
            app:argType="string"
            app:nullable="true" />
        <argument android:name="series"
            app:argType="string"
            app:nullable="true"/>
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.rick.screen_movie.search_screen.SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
        <argument
            android:name="movie"
            app:argType="string"
            app:nullable="true"/>
        <argument
            android:name="series"
            app:argType="string"
            app:nullable="true"/>
    </fragment>

</navigation>