<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/two_dimen">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/details_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:showDividers="none">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="none">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/movie_title"
                    android:textAppearance="?attr/textAppearanceHeadline5" />

            </androidx.appcompat.widget.Toolbar>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/image_entry" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:hint="@string/movie_summary"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="18sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/genres"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_publication_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/release_date"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/runtime"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/movie_awards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/awards"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/ratings"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/six_dimen"
                android:layoutDirection="locale"
                app:chipSpacingHorizontal="@dimen/eight_dimen"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/imdb_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/imdb_rating"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipStrokeColor="@android:color/black"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/r_tomatoes_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tomato_rating"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipStrokeColor="@android:color/black"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/movie_db_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/db_rating"
                    android:textAppearance="?attr/textAppearanceBody2"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipStrokeColor="@android:color/black"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/actors"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <View style="@style/Divider.Horizontal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_actors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/six_dimen"
                tools:listitem="@layout/actors_entry" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/box_office"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <View style="@style/Divider.Horizontal" />

            <TextView
                android:id="@+id/movie_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/budget"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                android:id="@+id/movie_open_weekend_gross"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_week_gross"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                android:id="@+id/movie_world_wide_gross"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/six_dimen"
                android:text="@string/world_wide_gross"
                android:textAppearance="?attr/textAppearanceBody2" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/similar_titles"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <View style="@style/Divider.Horizontal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_similars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/similar_entry" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.core.widget.NestedScrollView>