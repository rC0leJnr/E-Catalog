<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_llayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/eight_dimen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Title, secondary and supporting text -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textSize="24sp" />

        <!--        Star, button to add/remove favorite-->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fav_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="@dimen/two_dimen"
            android:src="@drawable/star_24" />

    </LinearLayout>

    <!-- Media -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_description_media"
        android:maxWidth="@dimen/max_image_width"
        android:minWidth="@dimen/min_image_width"
        android:paddingBottom="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_image" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1" />

</LinearLayout>