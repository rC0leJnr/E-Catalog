<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/anime_entry_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_dimen"
            android:hint="@string/no_title"
            android:textAppearance="?attr/textAppearanceHeadline5" />

        <View
            style="@style/Divider.Horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:minWidth="@dimen/min_image_width"
            android:minHeight="@dimen/image_height"
            android:scaleType="fitCenter"
            app:strokeColor="@null" />

        <TextView
            android:id="@+id/synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_dimen"
            android:ems="5"
            android:maxLines="5"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textSize="@dimen/large_text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pg_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:hint="@string/pg_rating"
            android:textAppearance="?attr/textAppearanceBody2" />
    </LinearLayout>

</androidx.cardview.widget.CardView>