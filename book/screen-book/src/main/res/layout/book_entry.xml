<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_entry_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:backgroundTint="?attr/colorSurface"
    android:transitionName="@string/book_transition_name">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/two_dimen"
            android:text="@string/title"
            android:textAppearance="?attr/textAppearanceHeadline5"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/fav_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            marb
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider_horizontal"
            style="@style/Divider.Horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/book_title" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_horizontal" />

        <LinearLayout
            android:id="@+id/llayout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/two_dimen"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/divider_horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/authors"
                android:textAppearance="?attr/textAppearanceBody2" />

            <View style="@style/Divider.Horizontal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/topics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/topics"
                android:textAppearance="?attr/textAppearanceBody2" />

            <View style="@style/Divider.Horizontal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/bookshelf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/bookshelf"
                android:textAppearance="?attr/textAppearanceBody2" />

            <View style="@style/Divider.Horizontal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/languages"
                android:textAppearance="?attr/textAppearanceBody2" />

            <View style="@style/Divider.Horizontal" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/downloaded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/two_dimen"
                android:text="@string/downloaded"
                android:textAppearance="?attr/textAppearanceBody2" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>